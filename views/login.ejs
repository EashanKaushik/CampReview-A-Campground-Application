<% include partials/header %>

<div class="row">
	<div class="col-md-12 text-center">
		<h1>Login</h1>
	</div>

	<div class="col-md-12">
		<form class="form-signin" action="/login" method="POST">
			<div class="form-group">
				<label for="login" class="sr-only">Login</label>
		    	<input id="login" class="form-control" type="text" name="username" placeholder="username" required autofocus>
		    </div>
		    <div class="form-group">
		    	<label for="password" class="sr-only">Password</label>
		    	<input id="password" class="form-control" type="password" name="password" placeholder="password" required>
		    </div>
		    <div class="form-group">
				<button class="btn btn-lg btn-primary btn-block" type="submit">Submit!</button>
			</div>
			<div class="form-group">
				<hr>
				<p>New to YelpCamp? <a href="/register">Sign up</a></p>
			</div>
			<div class="form-group">
				<a href="javascript:history.back()"><i class="fas fa-arrow-left"></i> Go back</a>
			</div>
		</form>
	</div>
</div>

<% include partials/footer %>